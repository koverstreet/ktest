. "$(dirname "$(readlink -e "${BASH_SOURCE[0]}")")/lustre-libs.sh"

require-lustre-kernel-config
require-lustre-debug-kernel-config

config-mem 10G
config-timeout 60

config-scratch-devs 512M

test_llmount()
{
    load_lustre_modules
    setup_lustre_mgs

    run_llog

    cleanup_lustre_mgs
}

main "$@"
