. "$(dirname "$(readlink -e "${BASH_SOURCE[0]}")")/lustre-libs.sh"

require-lustre-kernel-config
require-lustre-debug-kernel-config

config-mem 10G
config-timeout 60

test_llmount()
{
    setup_lustrefs

    sleep 2

    cd /mnt/lustre/

    perf record -F 99 -a -g -- fio \
	 --name=bulkrw \
	 --ioengine=libaio \
	 --rw=write \
	 --bs=1M \
	 --size=100M \
	 --numjobs=$(nproc) \
	 --iodepth=8 \
	 --direct=1 \
	 --runtime=20s \
	 --time_based \
	 --group_reporting

    perf script > "$ktest_out/out.perf"

    cleanup_lustrefs
}

main "$@"
