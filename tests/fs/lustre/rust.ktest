#
# Just boot using the Lustre kernel config (with Rust)
#
# Author: Timothy Day <timday@amazon.com>
#

. "$(dirname "$(readlink -e "${BASH_SOURCE[0]}")")/lustre-libs.sh"

require-lustre-kernel-config
require-lustre-debug-kernel-config

require-kernel-config RUST=y
require-kernel-config SAMPLES=y
require-kernel-config SAMPLES_RUST=y
require-kernel-config SAMPLE_RUST_MINIMAL=m

config-mem 16G
config-timeout 60

test_boot()
{
    echo boot
}

main "$@"
