	umount /mnt
	#bcachefs fsck -y ${ktest_scratch_dev[0]} || true

	echo
	echo "Running fsck again; should be clean"

	bcachefs fsck -ny ${ktest_scratch_dev[0]} ${ktest_scratch_dev[1]}
    done

    check_bcachefs_leaks
    check_bcachefs_counters ${ktest_scratch_dev[0]}
