test_seq_reads()
{
    cd /root

    mkfs.xfs /dev/sdb
    mount /dev/sdb /mnt
    fallocate -l1G /mnt/test
    dd if=/mnt/test of=/dev/null 2>/dev/null

    perf record -ag -- \
    fio --group_reporting			\
	--gtod_reduce=1				\
	--runtime=60s				\
	--exitall_on_error=1			\
	--ioengine=psync			\
	--fallocate=none			\
	--fadvise_hint=1			\
	--invalidate=0				\
	--name=randread				\
	--rw=randread				\
	--filename=/mnt/test			\
	--filesize=1G				\
	--io_size=64G				\
	--numjobs=$t				\
	--bs=512

    umount /mnt
}

