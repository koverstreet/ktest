test_recovery()
{
    set_watchdog 180

    run_quiet "" bcachefs format		\
	--discard				\
	--bucket=64k				\
	--block_size=4k				\
	/dev/sd[bcd]

    for i in `seq 0 20`; do
	mount -t bcachefs /dev/sdb:/dev/sdc:/dev/sdd /mnt

	#run_fio_randrw
	fio --eta=always			\
	    --exitall_on_error=1		\
	    --randrepeat=0			\
	    --ioengine=libaio			\
	    --iodepth=64			\
	    --iodepth_batch=16			\
	    --direct=1				\
	    --numjobs=1				\
	    --filename=/mnt/fiotest		\
	    --filesize=3500M			\
	    --name=randwrite			\
	    --rw=randwrite			\
	    --bsrange=4k-8k			\
	    --runtime=2

	$ktest_dir/tests/xfstests/src/godown -f /mnt

	umount /mnt
    done
}

