test_journal_resize()
{
    run_quiet "" bcachefs format -f /dev/sdb
    mount -t bcachefs /dev/sdb /mnt

    run_fio_randrw --filesize=2G &

    sleep 4
    bcachefs device resize-journal /dev/sdb 1G

    wait
    umount /mnt
}

