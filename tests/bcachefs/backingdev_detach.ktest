#!/bin/bash

require-lib bcache-test-libs.sh

config-cache 512M
config-backing 2G,2G
config-bucket-size 64k
config-block-size 4k
config-writeback

config-timeout $(stress_timeout)

main()
{
    setup_tracing 'bcache:*'

    setup_bcache
    cset_uuid=$(ls -d /sys/fs/bcache/*-*-* | sed -e 's/.*\///')

    (
     	for i in $(seq 1 3); do
	    sleep 5
	    echo > /sys/block/bcache0/bcache/detach
	    echo "detach done"
	    sleep 5
	    echo $cset_uuid > /sys/block/bcache0/bcache/attach
	    echo "attach done"
	done
    )&

    test_antagonist
    test_fio
    stop_bcache
}
