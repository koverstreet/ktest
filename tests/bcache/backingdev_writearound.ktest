#!/bin/bash

. $(dirname $(readlink -e ${BASH_SOURCE[0]}))/bcache-test-libs.sh

config-cache 512M
config-backing 512M,512M
config-bucket-size 64k
config-block-size 4k

config-replacement random
config-writearound

config-timeout $(stress_timeout)

test_main()
{
    setup_tracing 'bcache:*'

    setup_bcache
    run_antagonist
    run_bcache_stress
    stop_bcache
}
