#!/bin/bash

. $(dirname $(readlink -e ${BASH_SOURCE[0]}))/bcache-test-libs.sh

config-cache 512M
config-backing 2G,2G
config-bucket-size 64k
config-block-size 4k
config-writeback

config-timeout $(stress_timeout)

test_main()
{
    setup_tracing 'bcache:*'

    (
	sleep 10
	echo "doing unregister"
	echo 1 > /sys/fs/bcache/*/unregister
	echo "unregister done"
    )&

    setup_bcache
    run_antagonist
    run_fio
    stop_bcache
}
